import 'package:flutter/material.dart';
import 'card_links.dart'; // Importe o componente CardLinks

class HomePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('HomePage'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              'Conteúdo da HomePage',
              style: TextStyle(fontSize: 18.0),
            ),
            SizedBox(height: 20.0),
            CardLinks(
              onPressed: () {
                // Ação a ser executada quando um card menor for pressionado
                // Por exemplo: Navigator.push para outra página
                print('Card pequeno pressionado!');
              },
            ),
          ],
        ),
      ),
    );
  }
}
